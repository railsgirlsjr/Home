{%- capture amsf_page_lang -%}
  {%- if page.languages -%}
    {%- if page.languages[0] != null -%}
      lang="{{ page.languages | first }}"
    {%- else -%}
      lang="{{ page.languages }}"
    {%- endif -%}
  {%- endif -%}
{%- endcapture -%}
